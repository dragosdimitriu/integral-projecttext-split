# Flask Secret Key (generate a random string)
SECRET_KEY=your-secret-key-here

# Google OAuth2 Credentials
# Get these from Google Cloud Console: https://console.cloud.google.com/
# 1. Create a new project or select existing one
# 2. Enable Google+ API
# 3. Go to Credentials -> Create Credentials -> OAuth 2.0 Client ID
# 4. Set Authorized redirect URIs to: http://localhost:5000/callback (or your domain)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Session Security
SESSION_COOKIE_SECURE=False  # Set to True in production with HTTPS
FLASK_DEBUG=False

# Email Configuration (for processing notifications)
MAIL_ENABLED=False  # Set to True to enable email notifications
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password  # Use App Password for Gmail
MAIL_DEFAULT_SENDER=your-email@gmail.com

# Base URL for email links (production: https://pt.schrack.lastchance.ro)
BASE_URL=http://localhost:5000

